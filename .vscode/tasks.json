{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang-cl.exe build active file",
            "command": "clang-cl.exe",
            "args": [
                "-I${workspaceFolder}/include",
                "${file}",
                "-o", "${workspaceFolder}\\build\\MathOrDeath_v_0_0_1-5.exe",
                "-g",
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "/link",
                "/LIBPATH:${workspaceFolder}/lib/x64",
                "SDL2.lib",
                "SDL2main.lib",
                "SDL2_image.lib",
                "kernel32.lib",
                "user32.lib",
                "gdi32.lib",
                "winmm.lib",
                "imm32.lib",
                "ole32.lib",
                "oleaut32.lib",
                "version.lib",
                "uuid.lib",
                "comdlg32.lib",
                "advapi32.lib",
                "shell32.lib",
                "/SUBSYSTEM:WINDOWS"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Build task for Clang with SDL2."
        },
        {
            "label": "Run Executable",
            "type": "shell",
            "command": "${workspaceFolder}\\build\\MathOrDeath_v_0_0_1-5.exe",
            "dependsOn": "C/C++: clang-cl.exe build active file",
            "problemMatcher": []
        }
    ]
}
